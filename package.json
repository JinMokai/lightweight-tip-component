  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "keywords": [
    "tooltip",
    "web-components",
    "lightweight",
    "vanilla-js",
    "zero-dependencies",
    "tip-component"
  ],
  "author": {
    "name": "JinMokai",
    "url": "https://github.com/JinMokai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JinMokai/lightweight-tip-component.git"
  },
  "homepage": "https://github.com/JinMokai/lightweight-tip-component#readme",
  "bugs": {
    "url": "https://github.com/JinMokai/lightweight-tip-component/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode lib",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "demo:preview": "vite preview --mode demo",
    "demo:build": "vite build --mode demo"
  },
  "devDependencies": {
    "vite": "^7.1.2"
