{
  "name": "lightweight-tip-component",
  "version": "0.0.4",
  "description": "A lightweight tooltip component built with Web Components, zero dependencies, small bundle size and easy to use.",
  "type": "module",
  "main": "dist/lightweight-tip-component.umd.js",
  "module": "dist/lightweight-tip-component.es.js",
